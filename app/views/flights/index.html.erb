<h1>Flights#index</h1>
<p>Find me in app/views/flights/index.html.erb</p>
<%= form_with url: flights_path, method: :get do |f| %>
  <%= f.label :departure_code %>
  <%= select_tag :departure_code, options_for_select(@departure_airports) %>

  <%= f.label :arrival_code %>
  <%= select_tag :arrival_code, options_for_select(@arrival_airports) %>

  <%= f.label :num_tickets %>
  <%= select_tag :num_tickets, options_for_select(@num_tickets) %>

  <%= f.label :start_date %>
  <%= select_tag :start_date, options_from_collection_for_select(@flight_dates, :start_date_format_to_date, :start_date_format_to_mdy)  %>

  <%= f.submit "Search" %>
<% end %>

<% @flights.each_with_index do |flight, idx| %>
  <%= idx + 1 %>.
  <div>
    Departure Airport:
    <%= flight.departure_airport.code %>
  </div>
  <div>
    Arrival Airport:
    <%= flight.arrival_airport.code %>
  </div>
  <div>
    Start Date:
    <%= flight.start_date %>
  </div>
  <div>
    Flight Duration:
    <%= flight.flight_duration.in_hours %> hours
  </div>
  <br>
<% end %>